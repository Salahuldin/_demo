
    <%= form_for  [@project,@bug], :html => {:multipart => true} do |f|  %>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
	<br>
	<%= f.label :description %><br>
	<%= f.text_area :description %>
	<br>
	<%= f.label :deadline %><br>
	<%= f.date_select :deadline %>
    <br>    
    <br>
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar%>
    <br>
    <div class="row justify-content-md-center">
        <div class="field form-group col-md-3">
            <%= f.label "Type" %><br>
            <%= f.select :bug_type, options_for_select(["Bug","Feature"]), class: "form-control"
            %>
        </div>
    </div>      
    <div class="row justify-content-md-center">
        <div class="field form-group col-md-3">
            <%= f.label "Status" %><br>
            <%= f.select :status, options_for_select(["New","Started","Completed"]), class: "form-control" 
            %>
        </div>
    </div>
    <%= f.submit 'Assign Bug', :class => 'button right' %>
    <% end %>
