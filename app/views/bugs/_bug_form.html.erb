
<%= form_for  [@project, @bug], :html => {:multipart => true} do |f|  %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.label :deadline %><br>
    <%= f.date_select :deadline %>
  </div>
  <div class="form-group">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar%>
  </div>
  <div class="row justify-content-md-center">
    <div class="field form-group col-md-3">
      <%= f.label "Type" %><br>
      <%= f.select :bug_type, options_for_select(["bug","feature"]), class: "form-control"
      %>
      </div>
  </div>      
  <div class="row justify-content-md-center">
    <div class="field form-group col-md-3">
      <%= f.label "Status" %><br>
      <%= f.select :status, options_for_select(["new_bug","started","resolved"]), class: "form-control" 
      %>
    </div>
  </div>
  <%= f.submit :class => 'button right' %>
<% end %>
